include ../mixin/_helpers

doctype html
block var

html(lang="ru")
  head
    meta(charset="utf-8")
    title Кольца из бетонв. Собственное производствл
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="icon" href="favicon.ico" type="image/x-icon")
    link(rel='stylesheet', href='css/common.css')

    link(rel='apple-touch-icon' sizes='180x180' href='/img/favicon/apple-touch-icon.png')
    link(rel='icon' type='image/png' sizes='32x32' href='/img/favicon/favicon-32x32.png')
    link(rel='icon' type='image/png' sizes='16x16' href='/img/favicon/favicon-16x16.png')
    link(rel='manifest' href='/img/favicon/site.webmanifest')
    link(rel='mask-icon' href='/img/favicon/safari-pinned-tab.svg' color='#5bbad5')
    meta(name='msapplication-TileColor' content='#a8e5ff')
    meta(name='theme-color' content='#a8e5ff')

  body
    .page#container
      .page__content
        // begin navbar
        .b-navbar
          .__wrap.container
            .__logo
              a(href="/")
                img(src="../../img/logo.svg", alt="Компания БетВайс")
            .__slug Производство и поставка<br> армированных <br>железобетонных издели
            .__contact
              .__tel.tel-wrap
                .b-tel
                  a.__item(href="tel:+375292589572")
                    span.__code +375 29
                    | 258 95 72
                  a.__item(href="tel:+375291062607")
                    span.__code +375 29
                    | 106 26 07
                .b-tel-msg.__tel-msg
                  a(href="viber://chat?number=%2B375292589572").__item
                    .__icon.--viber
                  a(href="tg://resolve?domain=betonkolca").__item
                    .__icon.--telegramm
              .__work-time ВРЕМЯ РАБОТЫ: <br>с 8.00-19.00 <br>понедельник - пятница
              a.__call.btn.fancyform(href="#getcall")
                span Заказать звонок
                  +svgMono("tel")
            .__nav
              .burger#burger
                span
              nav.menu.menu--main#main-nav
                include ../../components/nav/_nav.pug
        // end navbar
        .page-overflow
          block content


      footer.b-footer-page
        .container
          .__wrap
            .__logo
              a(href="/" ).logo
                img(src="../../img/logo.svg", alt="Компания Varna")
            .__address
              div Адрес производства <br>Минский р-н. д. Аннополь.
              div  Координаты: <br> 53.678387, 27.561147
            .__tel.tel-wrap
              .b-tel
                a.__item(href="tel:+375292589572")
                  span.__code +375 29
                  | 258 95 72
                a.__item(href="tel:+375291062607")
                  span.__code +375 29
                  | 106 26 07
              .b-tel-msg.__tel-msg
                a(href="viber://chat?number=%2B375292589572").__item
                  .__icon.--viber
                a(href="tg://resolve?domain=betonkolca").__item
                  .__icon.--telegramm

            .__nav
              +menu()
            .__desc-warn Сайт не является интернет-магазином, информация о товарах и ценах носит ознакомительный характер.


  //- block form
  form.b-form.modal#getcall(acion="")
    h3.__title Заказать звонок
    input(type="hidden" value="Заказ звонка" name="order_type")
    .__line
      label Ваше имя
      input(type="text" name="order_name" placeholder="Введите Ваше имя" required)
    .__line
      label Контактный телефон
      input(type="tel" name="order_tel" required)
    .btn-wrap
      button.btn(type="submit")
        span Перезвоните мне
          +svgMono("arrow-hand")

  form.b-form.modal#getorder(acion="")
    h3.__title Заказать стеновые кольца
    input(type="hidden" value="Стеновые кольца" name="order_type")
    .__line
      label Ваше имя
      input(type="text" name="order_name" placeholder="Введите Ваше имя" required)
    .__line
      label Контактный телефон
      input(type="tel" name="order_tel" required)
    .btn-wrap
      button.btn(type="submit")
        span Отправить заявку
          +svgMono("arrow-hand")

  form.b-form.modal#getseptic(acion="")
    h3.__title Заказать комплектующие для септика
    input(type="hidden" value="Септик" name="order_type")
    .__line.form-col
        label Количесво человек
        input(type='number' name="order_peoplecount")
    .__line
      label Ваше имя
      input(type="text" name="order_name" placeholder="Введите Ваше имя" required)
    .__line
      label Контактный телефон
      input(type="tel" name="order_tel" required)
    .btn-wrap
      button.btn(type="submit")
        span Отправить заявку
          +svgMono("arrow-hand")



  //- script(src='js/vendors/jquery-3.4.1.min.js')
  script(src='js/main.js')
  //- script(src='js/hot-bundle.js')
