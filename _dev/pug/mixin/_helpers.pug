mixin menu()
  ul.menu__list
    each item in menudata
      li.menu__item(class=(current === item.name || section === item.name ? "active" : undefined) class=(item.sub)? "parent" : undefined)
        a.menu__link(href=item.link) #{item.name}
        if item.sub
          ul
            each subitem in item.sub
              li.menu__item(class=(current === subitem.name ? "active" : undefined))
                a.menu__link(href=subitem.link) #{subitem.name}
